<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th>
                  <%= @user.name %>
                </th>
              </tr>
              <tr>
                <th>introduction</th>
                <th>
                  <%= @user.introduction %>
                </th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2 class="mt-3">New Book</h2>
          <div>
            <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title, id: "book_title", class: "form_control d-block" %>
            </div>
            <div class="form-group">
              <label for="book_body">Option</label>
              <%= f.text_area :body, id: "book_body", class: "form_control d-block" %>
            </div>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
            </div>
            <% end %>
          </div>
        </div>
      <div class="col-md-8 offset-md-1">
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <div class="error_explanation">
          <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> errors</h3>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
          <% end %>
        </div>
    <%= form_with model: @book, method: :patch do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, id: "book_title", class: "form-control d-block" %>
      </div>
      <div class="form-group">
        <label for="book_body">Option</label>
        <%= f.text_field :body, id: "book_body", class: "form-control d-block" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>
    <% end %>
    <%= link_to 'show', book_path(@book.id) %>
    <%= link_to 'back', books_path %>
  </div>
</div>

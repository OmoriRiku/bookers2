<div class="container">
  <div class="row">
    <%= render 'books/book', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(current_user.id) do %>
                <%= image_tag @book_id.user.get_profile_image(100,100) %><br />
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_id.id) do %>
                <%= @book_id.title %>
              <% end %>
            </td>
            <td>
              <%= @book_id.body %>
            </td>
            <% if @book_id.user == current_user %>
              <td>
                <%= link_to 'Edit', edit_book_path(@book_id), class: "btn btn-success btn-sm" %>
              </td>
              <td>
                <%= link_to 'Destroy', book_path, method: :delete, class: "btn btn-danger btn-sm" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
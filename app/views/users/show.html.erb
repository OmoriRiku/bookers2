<div class="container">
  <div class="row">
    <%= render 'books/book.html.erb', user: @user, book: @book %>
    <div class="col-md-8 offset-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>text</th>
            <th>text</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @book_show.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(current_user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %><br />
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
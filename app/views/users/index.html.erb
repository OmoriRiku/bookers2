<div class="container">
  <div class="row">
    <%= render 'books/book.html.erb', user: @user, book: @book %>
    <div class="col-md-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= users.name %>
            </td>
            <td>
              <%= link_to 'Show', edit_user_path(users.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>